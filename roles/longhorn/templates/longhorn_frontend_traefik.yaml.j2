apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: longhorn-ingress
  namespace: longhorn-system
  annotations:
    kubernetes.io/ingress.class: "traefik"
    cert-manager.io/cluster-issuer: {{ chave_secreta }}
    # The middleware is prefixed with the namespace and the auth file.
    traefik.ingress.kubernetes.io/router.middlewares: longhorn-system-basic-auth@kubernetescrd
spec:
  rules:
    - host: {{ fqdn_longhorn }}
      http:
        paths:
          - path: "/"
            pathType: Prefix
            backend:
              service:
                name: longhorn-frontend
                port:
                  number: 80
  tls: 
  - hosts:
    - {{ fqdn_longhorn }}
    secretName: longhorn